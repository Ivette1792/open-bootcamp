// Obtener el botón

// Obtener el botón
var miBoton = $("#miBoton");

// Agregar un evento click al botón
miBoton.on("click", function() {
  alert("¡Click en el botón!");
});

var miBoton = document.getElementById("miBoton");

// Agregar un evento click al botón
miBoton.addEventListener("click", function() {
  alert("¡Click en el botón!");
});
